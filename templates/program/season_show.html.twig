{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Season {{ season.number }} of {{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>List of episodes :</p>
            {% for episode in episodes %} 
            <p><a href="{{ path('program_episode_show', { program: program.id, season: season.id, episode: episode.id }) }}">Episode {{ episode.number }} : {{ episode.title }}</a></p>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_show', { program: program.id }) }}">
        Retour à la fiche de la série
    </a>
{% endblock %}
