{% extends 'base.html.twig' %}

{% block title %}All actors{% endblock %}

{% block body %}
    {% for actor in actors %}
        <div>
            <h1>{{ loop.index }} / {{ actor.name }}</h1>
            <a href="{{ path("actor_show", { actor: actor.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucun acteur trouvé.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
