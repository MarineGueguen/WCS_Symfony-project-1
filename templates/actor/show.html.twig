{% extends 'base.html.twig' %}

{% block title %}Actor #{{ actor.id }}{% endblock %}

{% block body %}
    <div class="media">
            <div class="media-body">
            <h1 class="mt-0">{{ actor.name }}</h1>
            <strong>Series :</strong>
            <ul>
                {% for program in actor.programs %}
                    <li><a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a></li>
                {% else %}
                    <li>Aucune série pour cet acteur</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('actor_index') }}">
        Retour à la liste des acteurs
    </a>
{% endblock %}
